<% include ./../common/header %>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">Edit Profile</h4>
          </div>
          <div class="card-body">
            <form>
              <!-- equipment id -->
              <div class="row">
                <div class="col-md-12 pr-1">
                  <div class="form-group">
                    <label>Equipment ID</label>
                    <input type="text" name="equipment_id" class="form-control" placeholder="Equipment ID" value="" />
                  </div>
                </div>
              </div>

              <!-- equipment name -->
              <div class="row">
                <div class="col-md-12 pr-1">
                  <div class="form-group">
                    <label>Equipment name</label>
                    <input type="text" name="equipment_name" class="form-control" placeholder="Equipment name" value="" />
                  </div>
                </div>
              </div>

              <!-- equipment Quantity -->
              <div class="row">
                <div class="col-md-12 pr-1">
                  <div class="form-group">
                    <label>Equipment Quantity</label>
                    <input type="text" name="equipment_quantity" class="form-control" placeholder="Equipment Quantity" value="" />
                  </div>
                </div>
              </div>

              <!-- equipment_extra_info -->
              <div class="row">
                <div class="col-md-12 pr-1">
                  <div class="form-group">
                    <label>Equipment Extra Info</label>
                    <input type="text" name="equipment_extra_info" class="form-control" placeholder="Equipment Extra Info"
                      value="" />
                  </div>
                </div>
              </div>

              <!-- Current Status ID -->
              <div class="row">
                <div class="col-md-12 pr-1">
                  <div class="form-group">
                    <label>Current Status Id</label>
                    <input type="text" name="current_status_id" class="form-control" placeholder="Current Status ID"
                      value="" />
                  </div>
                </div>
              </div>

              <button type="submit" class="btn btn-info btn-fill pull-right">
                Update Profile
              </button>
              <div class="clearfix"></div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>